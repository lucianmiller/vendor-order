@{
  Layout = "_Layout";
}

@using VendorOrder.Models;

<h1 class="display-1">Vendors</h1>
<br>
<br>
@if (@Model.Count == 0)
{
  <h3>No vendors currently added!</h3>
}

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
}
<br>
<br>
<a href='/'><button>Back Home</button></a>